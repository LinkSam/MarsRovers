                @Html.TextBoxFor(m => m.Heading, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Heading, "", new { @class = "error" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Instructions, new { @class = "col-md-2 control-label" })
